<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.appcompat.widget.Toolbar
        android:visibility="invisible"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:background="@drawable/border_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#000" >
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="设备管理"/>
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="当前无设备,请点击按钮添加设备"
        android:textSize="20dp"
        android:visibility="invisible"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:id="@+id/button_add_experiment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:srcCompat="@drawable/add_menu"
        android:visibility="invisible"
        android:text="@string/add_equipment"
        android:background="@drawable/big_button_style"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintDimensionRatio="h,1:1.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


<!--        <View-->
<!--        android:id="@+id/border"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:background="@drawable/big_button_style"-->
<!--        android:layout_marginStart="30dp"-->
<!--        android:layout_marginEnd="30dp"-->
<!--        app:layout_constraintDimensionRatio="h,1:1.5"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="parent" />-->


    <ImageView
        android:id="@+id/progress"
        android:layout_width="55dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/porgress" />

    <TextView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在连接中..."
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress"/>


    <ImageView
        android:id="@+id/equip_status_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/frequency"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/link" />


    <TextView
        android:id="@+id/equip_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备状态"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/equip_status_icon"
        app:layout_constraintTop_toTopOf="@+id/equip_status_icon" />

    <TextView
        android:id="@+id/equip_status_op"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已连接"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@+id/equip_status_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp" />



    <ImageView
        android:id="@+id/equip_name_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/frequency"
        android:layout_marginTop="55dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/equip_status_icon" />


    <TextView
        android:id="@+id/equip_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备名称"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/equip_name_icon"
        app:layout_constraintTop_toTopOf="@+id/equip_name_icon" />

    <TextView
        android:id="@+id/equip_name_op"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABCDEFGHI"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@+id/equip_name_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp" />

    <ImageView
        android:id="@+id/equip_control_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/frequency"
        android:layout_marginTop="55dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/equip_name_icon" />


    <TextView
        android:id="@+id/equip_control_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备参数"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/equip_control_icon"
        app:layout_constraintTop_toTopOf="@+id/equip_control_icon" />


    <ImageView
        android:id="@+id/equip_control_op"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/right"
        app:layout_constraintTop_toTopOf="@+id/equip_control_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp" />


    <ImageView
        android:id="@+id/equip_delete_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/frequency"
        android:layout_marginTop="55dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/equip_control_icon" />


    <TextView
        android:id="@+id/equip_delete_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备解绑"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/equip_delete_icon"
        app:layout_constraintTop_toTopOf="@+id/equip_delete_icon" />


    <ImageView
        android:id="@+id/equip_delete_op"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/delete"
        app:layout_constraintTop_toTopOf="@+id/equip_delete_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp" />



</androidx.constraintlayout.widget.ConstraintLayout>