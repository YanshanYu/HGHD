<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.control.ControlFragment">

    <Button
        android:id="@+id/button_followhead1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="110dp"
        android:text="@string/follow_head"
        android:textSize="25sp"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintEnd_toStartOf="@+id/button_followhead2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_followhead2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="110dp"
        android:text="@string/follow_head"
        android:textSize="25sp"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintEnd_toStartOf="@+id/button_followhead3"
        app:layout_constraintStart_toEndOf="@+id/button_followhead1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_followhead3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="16dp"
        android:text="@string/follow_head"
        android:textSize="25sp"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_followhead2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_eye_experiment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="8:4"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/eye_tracking_experiment"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/button_sca_experiment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_followhead2" />

    <Button
        android:id="@+id/button_sca_experiment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/scanner_experiment"
        android:textSize="25sp"
        app:layout_constraintDimensionRatio="8:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_eye_experiment" />

